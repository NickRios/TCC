{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "@typescript-eslint/interface-name-prefix": ["error", { "prefixWithI": "always" }],
    "rules": {
        "no-useless-constructor": "off",
        "import/resolver": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]          
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }     
    }
}
